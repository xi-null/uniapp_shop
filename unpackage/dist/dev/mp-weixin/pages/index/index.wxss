.index_wra {
  height: 90vh;
  background-color: #f4f4f4;
  width: 100vw;
  overflow: hidden;
}
.index_wra .first {
  width: 680rpx;
  margin: 58rpx 35rpx 30rpx 35rpx;
  height: 130rpx;
  display: flex;
  align-items: flex-start;
  justify-content: space-between;
}
.index_wra .first .left {
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
}
.index_wra .first .left .role {
  width: 302rpx;
  height: 100rpx;
  background-color: #ffffff;
  box-shadow: 0rpx 0rpx 15rpx 0rpx rgba(0, 0, 0, 0.16);
  border-radius: 56rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}
.index_wra .first .left .role .name {
  height: 40rpx;
  font-family: Microsoft YaHei;
  font-size: 31rpx;
  font-weight: normal;
  font-stretch: normal;
  line-height: 40rpx;
  letter-spacing: 0rpx;
  color: #000000;
}
.index_wra .first .left .role .icon {
  width: 19px;
  height: 15px;
  margin-left: 10rpx;
}
.index_wra .first .left .role .icon image {
  width: 100%;
  height: 100%;
}
.index_wra .first .left .introduction {
  width: 92rpx;
  height: 31rpx;
  font-family: Microsoft YaHei;
  font-size: 23rpx;
  font-weight: normal;
  font-stretch: normal;
  line-height: 31rpx;
  letter-spacing: 0rpx;
  color: #707070;
  margin-left: 50rpx;
  margin-top: 10rpx;
  text-decoration: underline;
}
.index_wra .right {
  width: 108rpx;
  height: 108rpx;
  background-color: #fde7d5;
}
.index_wra .right image {
  width: 100%;
  height: 100%;
}
.index_wra .list {
  width: 692rpx;
  height: 1000rpx;
  margin: auto;
  overflow: scroll;
}